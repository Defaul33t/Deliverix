<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body class="bg-main-green">
    <form
      class="w-full min-h-screen flex justify-center items-center"
      method="POST"
      action="/login"
    >
      <div class="w-full max-w-sm mx-5 flex flex-col gap-5">
        <img src="/images/logo.png" alt="" />
        <input
          class="p-5 bg-white rounded-md"
          type="text"
          name="name"
          id="name"
          placeholder="Meno"
        />
        <input
          class="p-5 bg-white rounded-md"
          type="password"
          name="password"
          id="password"
          placeholder="Heslo"
        />
        <button class="p-4 bg-main-orange text-white text-xl rounded-md">Prihlásiť</button>
      </div>
    </form>
    <script src="/login_script.js"></script>
  </body>
</html>
